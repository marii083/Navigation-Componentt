<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.exemplo.leituraclube.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/booksFragment"
        android:name="com.exemplo.leituraclube.BooksFragment"
        android:label="@string/title_books"
        tools:layout="@layout/fragment_books">
        
        <action
            android:id="@+id/action_booksFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
            
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.exemplo.leituraclube.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
        
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.exemplo.leituraclube.BookDetailFragment"
        android:label="{bookTitle}"
        tools:layout="@layout/fragment_book_detail">

        <argument
            android:name="bookTitle"
            app:argType="string" />
            
        <argument
            android:name="bookDescription"
            app:argType="string" />
            
    </fragment>
</navigation>
